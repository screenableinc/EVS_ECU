<LoginScreen>:
    name:"login"

    canvas.before:
        Rectangle:
            size: self.size
            pos:self.pos
            source:"./dependencies/bg2.jpg"
    FloatLayout:
        canvas.before:
            Color:
                rgba:0,0,0,.75
            Rectangle:
                size: self.parent.size
                pos:self.parent.pos
#    RelativeLayout:
#




    BoxLayout:
#        size_hint:None,None
#        size:self.children[3].width,500
#        canvas.before:
#            Color:
#                rgba:1,0,0,.75
#            Rectangle:
#                size: self.parent.size
#                pos:self.parent.pos

        orientation:"vertical"
        BoxLayout:


        BoxLayout:
            orientation:"vertical"


            Label:
                text: "WELCOME, PLEASE LOGIN"
                font_size: "40px"
                size_hint_y:None
                pos_hint:{'center_x':.5, 'center_y':.5}


            TextInput:
                size_hint_x:None
                size_hint_y:None
                id:student_id
                width:"200dp"
                height:40
                pos_hint:{'center_x':.5, 'center_y':.5}
                spacing:15
                hint_text:"Student ID"
            TextInput:
                size_hint_x:None
                size_hint_y:None
                width:"200dp"
                height:40
                pos_hint:{'center_x':.5, 'center_y':.5}
                id:password
                password:True

                hint_text:"Password"

            LoginButton:

                source: './dependencies/login.png'
                allow_stretch:True
                keep_ratio:False
                size_hint:None, None
                pos_hint:{'center_x':.5, 'center_y':.5}
                width: "160dp"
                height:40

            FloatLayout:
                size_hint_y:None
                height:40
                id:err

        BoxLayout:

